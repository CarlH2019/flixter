<br />

<div class="booyah-box col-10 offset-1">
  <div class="text-center">
  <h1>What I'm Learning</h1>
  </div>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
   </h3>
   <br />
   <h3 class="text-center">
   <%= image_tag course.image.url, class: 'img-fluid' %>
   </h3>
   <br />
    <div class="row">
    <div class="col-12 text-center">
   <%= course.description %>
   </div>
   <div class="col-11 text-right">
   <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
   </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr" />

  <% end %>
  <div class="text-center">
  <h1>What I'm Teaching</h1>
  </div>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <h3 class="text-center">
    <%= image_tag course.image.url, class: 'img-fluid' %>
    </h3>
    <br />
    <div class="row">
    <div class="col-12 text-center">
    <%= course.description %>
    </div>

    <div class="col-11 text-right">
    <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
    </div>
   </div>
   <hr class="col-8 offset-2">
    <br class="clr" />
  <% end %>
</div>